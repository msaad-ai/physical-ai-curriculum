<?xml version="1.0" ?>
<!--
  PR2 Robot Model Placeholder - Educational Use
  This is a simplified URDF representation for educational purposes
  The actual PR2 model contains many more links and joints
-->
<robot name="pr2_robot">
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.5" radius="0.2"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.5" radius="0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <link name="head_tilt_link">
    <visual>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
    </visual>
  </link>

  <joint name="head_tilt_joint" type="revolute">
    <parent link="base_link"/>
    <child link="head_tilt_link"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="100" velocity="1"/>
  </joint>

  <!-- Additional joints and links would be defined here in a complete model -->
</robot>